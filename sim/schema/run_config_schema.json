{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Simulation Run Configuration",
  "description": "Parameters for a simulation run",
  "type": "object",
  "properties": {
    "time_steps": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of simulation steps to run"
    },
    "random_seed": {
      "type": "integer",
      "description": "Random seed for reproducibility"
    },
    "output_frequency": {
      "type": "integer",
      "minimum": 1,
      "description": "How often to record state"
    },
    "enable_visualization": {
      "type": "boolean",
      "description": "Whether to generate visualizations"
    }
  },
  "required": ["time_steps"]
}
