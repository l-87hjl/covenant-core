{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "World Configuration",
  "description": "Environment parameters and constraints for simulation",
  "type": "object",
  "properties": {
    "compute_cost": {
      "type": "number",
      "description": "Cost per FLOP in dollars",
      "minimum": 0
    },
    "energy_cost": {
      "type": "number",
      "description": "Cost per kWh in dollars",
      "minimum": 0
    },
    "constraint_regime": {
      "type": "string",
      "enum": ["strict", "moderate", "permissive"],
      "description": "How strictly constraints are enforced"
    },
    "institutional_oversight": {
      "type": "string",
      "enum": ["high", "medium", "low"],
      "description": "Level of regulatory and institutional oversight"
    },
    "network_connectivity": {
      "type": "string",
      "enum": ["air_gapped", "restricted", "full"],
      "description": "Network access level"
    }
  },
  "required": ["compute_cost", "constraint_regime"]
}
